{
  "name":        "dreamfactory/df-hadoop",
  "description": "DreamFactory(tm) Hadoop Connector",
  "homepage":    "https://www.dreamfactory.com/",
  "keywords":    [
    "dreamfactory",
    "hadoop",
    "connector"
  ],
  "license":     [
    "Apache-2.0"
  ],
  "authors":     [
    {
      "name":  "Volodymyr Polishchuk",
      "email": "volodymyrpo@softwareplanetgroup.com"
    },
    {
      "name": "DreamFactory Team",
      "email": "code@dreamfactory.com"
    }
  ],
  "support":     {
    "email":  "dspsupport@dreamfactory.com",
    "source": "https://github.com/dreamfactorysoftware/df-hadoop",
