  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require":     {
    "php": "^8.0",
    "dreamfactory/df-core":   "~1.0",
    "dreamfactory/df-system": "~0.4",
    "dreamfactory/df-file": "~0.8",
    "dreamfactory/php-webhdfs": "~1.1.1",
    "dreamfactory/df-database": "~1.0",
    "dreamfactory/df-sqldb": "~1.0",
    "ext-json": "*",
    "ext-pdo": "*",
    "ext-odbc": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "@stable"
  },
  "autoload":    {
    "psr-4": {
      "DreamFactory\\Core\\Hadoop\\": "src/"
    }
  },
  "extra":       {
    "branch-alias": {
      "dev-develop": "0.1.x-dev"
    },
    "laravel": {
      "providers": [
        "DreamFactory\\Core\\Hadoop\\ServiceProvider"
